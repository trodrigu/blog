extends layout

block content
  section
    aside
      .logo
        a(href="#")
          img(src="img/caticorn.png")
        .me-info
          h1 Thomas Rodriguez
          p A blog about code
    .social 
      .me-pic
        img(src="img/tommy.png")
      .me-blurb
        p Thomas Rodriguez is an aspiring developer in San Diego.  He enjoys sand beneath his feet or the warm glow of vim.
      .me-connect
        .left        
          p His github:
          p
            a(href="https://github.com/trodrigu") trodrigu
        .right 
          p He tweets at:
          p
            a(href="https://twitter.com/tom_m_rod") @tom_m_rod
    article
      - var postsOrdered = sortDates(site.posts)
      - function sortDates(postsArray) {
      - return postsArray.sort(function(a, b) {
      - return new Date(b.date) - new Date(a.date)
      - });
      -}
      each post in postsOrdered
        .index-post
          a(href=post._url)
            h1=  post.title
          .date=  post.date
          != post.content
          p= post.snippet
          a(href=post._url)
            .read Read More
