extends layout

block content
  section
    aside(id = 'nav')
    .social 
      .me-pic
        img(src="img/tommy.png")
      .me-blurb
        p Thomas Rodriguez is an aspiring developer in San Diego with experience in Python, Ruby, and Javascript Web Development.
      .me-connect
        .left        
          p His github:
          p
            a(href="https://github.com/trodrigu") trodrigu
        .right 
          p He tweets at:
          p
            a(href="https://twitter.com/tom_m_rod") @tom_m_rod
    article
      each post in site.posts
        .index-post
          a(href=post._url)
            h1=  post.title
          .date=  post.date
          != post.content
          p= post.snippet
          a(href=post._url)
            .read Read More
