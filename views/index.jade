extends layout

block content
  section
    aside
      .logo
        a(href="#")
          img(src="img/starboard_comp.png")
        .me-info
          h1 Thomas Rodriguez
          p A blog about code
    .social 
      .me-pic
        img(src="img/tommy.png")
      .me-blurb
        p Thomas Rodriguez is an aspiring developer in San Diego with experience in Python, Ruby, and Javascript Web Development.
      .me-connect
        .left        
          p His github:
          p
            a(href="#") trodrigu
        .right 
          p He tweets at:
          p
            a(href="#") @tom_m_rod
    article
      each post in site.posts
        .index-post
          a(href=post._url)
            h1=  post.title
          .date=  post.date
          != post.content
          p= post.snippet
          a(href="#")
            .read Read More
