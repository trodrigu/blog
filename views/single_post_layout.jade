doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='My Blog')
    meta(name='author', content= "Snippets of code and such")
    //- uncomment if your site is responsive!
    meta(name="viewport" content="target-densitydpi=device-dpi, initial-scale=1.0, minimum-scale=1.0, maximum-scale=2.0, user-scalable=1")
    title= post.title
    != css('../')

  body
    .post-logo
      a(href="/index.html")
        img(src="../img/caticorn.png")
    .post-article
      h1= post.title
      .date= post.date 
      block content
    .social-post
      .me-pic-post
        img(src="../img/tommy.png")
      .me-blurb-post
        p Thomas Rodriguez is an aspiring developer in San Diego who quests for greater enlightenment and growth.
      .me-connect-post
        .left-post
          p His github:
          a(href="https://github.com/trodrigu/") trodrigu
        .right-post
          p He tweets at:
          a(href="https://twitter.com/@tom_m_rod") @tom_m_rod
    != js('../')
